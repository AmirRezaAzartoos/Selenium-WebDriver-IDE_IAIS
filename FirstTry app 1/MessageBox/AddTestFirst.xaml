<Window x:Class="FirstTry_app_1.MessageBox.AddTestFirst"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddTestFirst" Height="134" Width="280" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Name="MainBorder" Background="WhiteSmoke" CornerRadius="5">
        <Grid Background="WhiteSmoke" RenderOptions.BitmapScalingMode="HighQuality" Margin="2,2,2,2">
            <Label Content="Add a test case first" Margin="17,34,17,0" VerticalAlignment="Top" FontFamily="roboto medium" Foreground="#DD3A3A3A" Background="{x:Null}"/>
            <Button FontFamily="roboto medium" FontSize="16" Click="OKAddTestButton_Click" Content="OK" Name="OKAddTestButton" Margin="94,86,94,0" Background="#FFF0F0F0" BorderBrush="{x:Null}" Foreground="#FF656565" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>
